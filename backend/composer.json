{
  "name": "mythicalsystems/featherpanel",
  "description": "The next generation of FeatherPanel",
  "type": "project",
  "homepage": "https://github.com/mythicalltd/featherpanel",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Addons\\": "storage/addons/",
      "App\\Cron\\": "storage/cron/php/"
    }
  },
  "config": {
    "vendor-dir": "storage/packages"
  },
  "authors": [
    {
      "name": "NaysKutzu",
      "email": "ghermancassian2008@gmail.com",
      "role": "Developer",
      "homepage": "https://nayskutzu.xyz"
    }
  ],
  "minimum-stability": "alpha",
  "require": {
    "php": "^8.5",
    "vlucas/phpdotenv": "^5.6",
    "gravatarphp/gravatar": "^1.0",
    "phpmailer/phpmailer": "^6.9",
    "pragmarx/google2fa": "^8.0",
    "predis/predis": "^3.2",
    "nikolaposa/rate-limit": "^3.2",
    "guzzlehttp/guzzle": "^7.0",
    "composer-runtime-api": "^2.0",
    "symfony/yaml": "^7.3",
    "dg/mysql-dump": "^1.6",
    "symfony/routing": "^7.3",
    "symfony/http-foundation": "^7.3",
    "firebase/php-jwt": "^7.0",
    "symfony/mime": "^7.3",
    "zircote/swagger-php": "^5.4",
    "ext-redis": "*",
    "ext-sodium": "*",
    "cron/cron": "^1.9",
    "cloudflare/sdk": "dev-master#541fb4e2c9942a3b660bb6a0db676f7c851c144c", 
    "ifsnop/mysqldump-php": "^2.12"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1",
    "friendsofphp/php-cs-fixer": "^3.59",
    "squizlabs/php_codesniffer": "^3.8",
    "phpstan/phpstan": "^2.0"
  },
  "prefer-stable": true,
  "support": {
    "wiki": "https://www.mythical.systems",
    "chat": "https://discord.mythical.systems",
    "issues": "https://github.com/mythicalltd/featherpanel/issues",
    "docs": "https://docs.mythical.systems",
    "forum": "https://discord.mythical.systems"
  },
  "funding": [
    {
      "type": "GitHub",
      "url": "https://github.com/sponsors/nayskutzu"
    }
  ],
  "scripts": {
    "lint": [
      "export COMPOSER_ALLOW_SUPERUSER=1",
      "storage/packages/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --show-progress bar || exit 0",
      "storage/packages/bin/phpcs --standard=phpcs.xml --report=full --colors app/ || storage/packages/bin/phpcbf --standard=phpcs.xml app/ || exit 0"
    ],
    "phpcs": [
      "storage/packages/bin/phpcs --standard=phpcs.xml app/"
    ],
    "tests": [
      "export COMPOSER_ALLOW_SUPERUSER=1",
      "storage/packages/bin/phpunit --display-warnings tests/"
    ],
    "openapi": [
      "export COMPOSER_ALLOW_SUPERUSER=1",
      "storage/packages/bin/openapi -b app/Controllers/HomeController.php --output=openapi.json"
    ],
    "phpstan": [
      "export COMPOSER_ALLOW_SUPERUSER=1",
      "storage/packages/bin/phpstan analyse"
    ],
    "phpstan-baseline": [
      "export COMPOSER_ALLOW_SUPERUSER=1",
      "storage/packages/bin/phpstan analyse --generate-baseline"
    ]
  }
}
